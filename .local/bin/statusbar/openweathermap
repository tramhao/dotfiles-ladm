#!/bin/sh

get_icon() {
    case $1 in
        # Icons for weather-icons
        01d) icon="ðŸŒž";;
        01n) icon="ðŸŒ‘";;
        02d) icon="ðŸŒ¤ï¸";;
        02n) icon="ðŸŒ¤ï¸";;
        03*) icon="â˜ï¸";;
        04*) icon="â˜ï¸";;
        09d) icon="ðŸŒ§ï¸";;
        09n) icon="ðŸŒ¦ï¸";;
        10d) icon="ðŸŒ§ï¸";;
        10n) icon="ðŸŒ§ï¸";;
        11d) icon="â›ˆï¸";;
        11n) icon="â›ˆï¸";;
        13d) icon="â„ï¸";;
        13n) icon="â„ï¸";;
        50d) icon="â›ˆï¸";;
        50n) icon="â›ˆï¸";;
        *) icon="ðŸ˜€";

        # 01d) icon="ï€";;
        # 01n) icon="ï€®";;
        # 02d) icon="ï€‚";;
        # 02n) icon="ï‚†";;
        # 03*) icon="ï";;
        # 04*) icon="ï€“";;
        # 09d) icon="ï€˜";;
        # 09n) icon="ï€˜";;
        # 10d) icon="ï€ˆ";;
        # 10n) icon="ï€¶";;
        # 11d) icon="ï€…";;
        # 11n) icon="ï€¥";;
        # 13d) icon="ï€Š";;
        # 13n) icon="ï€ª";;
        # 50d) icon="ï€ƒ";;
        # 50n) icon="ïŠ";;
        # *) icon="ï€";

        # Icons for Font Awesome 5 Pro
        #01d) icon="ï†…";;
        #01n) icon="ï•";;
        #02d) icon="ï›„";;
        #02n) icon="ï›ƒ";;
        #03d) icon="ï†";;
        #03n) icon="ï…";;
        #04*) icon="ï„";;
        #09*) icon="ïœ¿";;
        #10d) icon="ïƒ";;
        #10n) icon="ïœ¼";;
        #11*) icon="ï¬";;
        #13*) icon="ï‹œ";;
        #50*) icon="ïŽ";;
        #*) icon="ï„¨";
    esac

    echo $icon
}

KEY="d3bbbac74bc0d5aba7e664387bf7fb55"
CITY="1812896"
UNITS="metric"
SYMBOL="Â°"
weather=$'\0'

API="https://api.openweathermap.org/data/2.5"

if [ -n "$CITY" ]; then
    if [ "$CITY" -eq "$CITY" ] 2>/dev/null; then
        CITY_PARAM="id=$CITY"
    else
        CITY_PARAM="q=$CITY"
    fi

    COUNTER=0
    while [ $COUNTER -lt 10 ] && [ -z "$weather" ];do
        weather=$(curl -sf "$API/weather?appid=$KEY&$CITY_PARAM&units=$UNITS")
        let COUNTER=COUNTER+1
    done
else
    location=$(curl -sf https://location.services.mozilla.com/v1/geolocate?key=geoclue)

    if [ -n "$location" ]; then
        location_lat="$(echo "$location" | jq '.location.lat')"
        location_lon="$(echo "$location" | jq '.location.lng')"

        weather=$(curl -sf "$API/weather?appid=$KEY&lat=$location_lat&lon=$location_lon&units=$UNITS")
    fi
fi

if [ -n "$weather" ]; then
    weather_temp=$(echo "$weather" | jq ".main.temp" | cut -d "." -f 1)
    weather_icon=$(echo "$weather" | jq -r ".weather[0].icon")

    echo "$(get_icon "$weather_icon")" "$weather_temp$SYMBOL"
else
    echo "Service not available"
fi
