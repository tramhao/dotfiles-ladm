{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 0,
    "modules-left": [
        "clock",
        "custom/weather",
        "wlr/workspaces"
    ],
    "modules-center": [
        "hyprland/window",
        "mpris",
    ],
    "modules-right": [
        "tray",
        "custom/updates",
        "custom/mail",
        "custom/mail-check",
        "custom/language",
        "cpu",
        "battery",
        "pulseaudio",
    ],

    "hyprland/window": {
