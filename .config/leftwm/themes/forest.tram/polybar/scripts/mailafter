setsid -w -f "$TERMINAL" -e neomutt &&
unread="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/*/*/new/* -type f 2>/dev/null | wc -l 2>/dev/null)"

# # [ "$unread" = "0" ] && [ "$icon" = "" ] || echo "ðŸ“¬$unread$icon" > /tmp/mailupdate
